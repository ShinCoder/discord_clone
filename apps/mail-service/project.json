{
  "name": "mail-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mail-service/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/mail-service",
        "main": "apps/mail-service/src/main.ts",
        "tsConfig": "apps/mail-service/tsconfig.app.json",
        "assets": [
          "apps/mail-service/src/assets",
          "apps/mail-service/src/templates",
          {
            "input": "./libs/shared-assets/proto",
            "glob": "**/*",
            "output": "proto"
          }
        ],
        "isolatedConfig": true,
        "webpackConfig": "apps/mail-service/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "mail-service:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "mail-service:build:development"
        },
        "production": {
          "buildTarget": "mail-service:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/mail-service/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/mail-service/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc -p tsconfig.app.json --noEmit"],
        "cwd": "apps/mail-service",
        "forwardAllArgs": false
      }
    }
  },
  "tags": []
}
